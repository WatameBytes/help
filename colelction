              "  const hits = [];",
              "  (function walk(val) {",
              "    if (Array.isArray(val)) return val.forEach(walk);",
              "    if (val && typeof val === 'object') {",
              "      Object.entries(val).forEach(([k, v]) => {",
              "        if (k.toLowerCase().includes(keySub)) hits.push({ [k]: v });",
